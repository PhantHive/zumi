{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["DOM", "ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "../dist",
    "rootDir": "../",
    "jsx": "react-jsx",
    "baseUrl": "../",
    "typeRoots": ["../node_modules/@types", "./src/types"]
  },
  "include": [
    "src/**/*",
    "../shared/**/*"
  ],
  "exclude": ["../node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}